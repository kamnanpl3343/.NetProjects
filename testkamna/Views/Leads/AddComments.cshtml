@model testkamna.Models.CommentsViewModel
@{
}



<form id="comment_form" style="border-bottom: 1px solid #f0f2f5;">
    <div class="col-12">
        @Html.HiddenFor(x=>x.LeadId)
        <div class="form-group input-group-outline">
            <label for="CommentDate ">Date</label>
            <input class="form-control" asp-for="CommentDate" type="date" />
        </div>
   
        <div class="form-group input-group-outline">
            <label for="CommentText">CommentText</label>
            <textarea class="form-control" asp-for="CommentText" rows="2" cols="5"></textarea>
        </div>

        <button class="btn btn-primary" onclick="getPostData('/Leads/AddComments','#comment_card','#comment_form')">Submit Comment</button>
    </div>
</form>