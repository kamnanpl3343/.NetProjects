@model testkamna.Models.LeadsViewModel
@{
}
<div class="container my-auto">
    <div class="row">
        @{
            var isFocused = "";
        }
    <div class="col-lg-4 col-md-8 col-12 mx-auto">
        <div class="card z-index-0 fadeIn3 fadeInBottom">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
                    @if(Model.LeadId>0)
                    {
                        <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">Update Lead</h4>
                    }
                    else
                    {
                        <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">Add Lead</h4>
                    }
                    </div>
                    </div>
                    <div class="card-body">
                        <form method="post" role="form" action="/Leads/Add">
                            @Html.ValidationSummary(true)
                            <input type="hidden" name="LeadId" value="@Model.LeadId" />
                    <div class="input-group input-group-outline my-3 @isFocused">
                        <label class="form-label">Name</label>
                        <input type="text" asp-for="ContactName" class="form-control" required>
                        <br />
                        <span>@Html.ValidationMessageFor(m => m.ContactName, "", new {@class = "text-danger" })</span>

                    </div>


                    <div class="input-group input-group-outline my-3 @isFocused">
                        <label class="form-label">Address</label>
                        <input type="text" asp-for="Address" class="form-control" required>
                        <br />
                        <span>@Html.ValidationMessageFor(m => m.Address, "", new {@class = "text-danger" })</span>

                    </div>


                    <div class="input-group input-group-outline my-3 @isFocused">
                        <label class="form-label">Company Name</label>
                        <input type="text" asp-for="CompanyName" class="form-control" required>
                        <br />
                        <span>@Html.ValidationMessageFor(m => m.CompanyName, "", new {@class = "text-danger" })</span>

                    </div>

                    <div class="input-group input-group-outline my-3 @isFocused">
                        <label class="form-label">Phone Number</label>
                        <input type="text" asp-for="Phone" class="form-control" required>
                        <br />
                        <span>@Html.ValidationMessageFor(m => m.Phone, "", new {@class = "text-danger" })</span>

                    </div>
                    <div class="input-group input-group-outline my-3 @isFocused">
                        <label class="form-label">Email Address</label>
                        <input type="email" asp-for="Email" class="form-control" required>
                        <br />
                        <span>@Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger" })</span>

                    </div>
                    <div class="input-group input-group-outline my-3 @isFocused">
                        <label class="form-label">Interest</label>
                        <input type="text" asp-for="Interest" class="form-control" required>
                        <br />
                        <span>@Html.ValidationMessageFor(m => m.Interest, "", new {@class = "text-danger" })</span>

                    </div>


                    <div class="input-group input-group-outline my-3 @isFocused">
                        <label class="form-label">Remark</label>
                        <input type="text" asp-for="Remark" class="form-control" required>
                        <br />
                        <span>@Html.ValidationMessageFor(m => m.Remark, "", new {@class = "text-danger" })</span>

                    </div>
                    @if(Model.LeadId>0)
                        {
                            <button type="submit" class="btn btn-lg bg-gradient-secondary btn-lg w-100 mt-4 mb-0" asp-action="Add" asp-contoller="Leads">Update</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-lg bg-gradient-secondary btn-lg w-100 mt-4 mb-0">Submit</button>
                            
                        }

                        </form>
                    </div>
                    </div>
                    </div>
                    </div>
                    </div>