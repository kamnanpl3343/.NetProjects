@model testkamna.Models.FollowUpsViewModel
@{
}

<form id="followup_form" style="border-bottom: 1px solid #f0f2f5;">
    <div class="col-12">
        @Html.HiddenFor(x=>x.LeadId)
        <div class="form-group input-group-outline">
            <label for="FollowUpDate">Date</label>
            <input class="form-control" asp-for="FollowUpDate" type="date" />
        </div>
   
        <div class="form-group input-group-outline">
            <label for="Notes">Notes</label>
            <textarea class="form-control" asp-for="Notes" rows="2" cols="5"></textarea>
        </div>

        <button class="btn btn-primary" onclick="getPostData('/Leads/AddFollowUps','#followup_card','#followup_form')">Submit Follow-Up</button>
    </div>
</form>