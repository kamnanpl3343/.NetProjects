@model testkamna.Models.FollowUpsViewModel
@{
}

<div id="followupformid">

</div>

<ul class="list-group">
    @if (Model.List != null)
    {
        @foreach(var item in Model.List.OrderByDescending(x=> x.FollowUpDate))
        {
            <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                <div class="d-flex align-items-center text-sm">
                    @item.FollowUpDate (@item.Notes)
                    </div> 
                   <div class="d-flex flex-column">
                    <h6 class ="mb-1 text-dark font-weight-bold text-sm">@item.CreatedDate</h6>
                    <span class="text-xs">@item.CreatedBy</span>

                   </div>
            </li>
        }
    }
    else
    {

        <li class="list-group-item border-0 d-flex justify-content-center ps-0 mb-2 border-radius-lg">
            <span class="text-sm text-muted">No follow-ups found.</span>
        </li>
    }
</ul>